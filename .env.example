# FabricSpeaks Environment Variables Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# Node Environment
# =============================================================================
NODE_ENV=development
PORT=5000
HOST=localhost

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/fabricspeaks
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fabricspeaks
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Connection Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# =============================================================================
# Authentication & Security
# =============================================================================

# Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Session Secrets (CHANGE THESE!)
SESSION_SECRET=change-this-to-a-random-string-min-32-characters-long
COOKIE_SECRET=change-this-to-another-random-string-min-32-chars
CSRF_SECRET=change-this-for-csrf-protection-min-32-characters

# Token Encryption
VITE_STORAGE_KEY=change-this-for-localstorage-encryption-32-chars

# =============================================================================
# File Upload Configuration
# =============================================================================

# Upload Limits
VITE_MAX_IMAGE_SIZE=5242880
VITE_MAX_IMAGES_PER_PRODUCT=10
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Cloudinary (if using cloud storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=fabricspeaks

# OR Local Storage
UPLOAD_DIR=./uploads
UPLOAD_MAX_FILE_SIZE=5242880

# =============================================================================
# Payment Integration
# =============================================================================

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id

# =============================================================================
# Email Configuration
# =============================================================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=FabricSpeaks <noreply@fabricspeaks.com>

# =============================================================================
# API Configuration
# =============================================================================

# API URLs
VITE_API_URL=http://localhost:5000
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=FabricSpeaks

# Rate Limiting
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100
UPLOAD_RATE_LIMIT_MAX=50

# =============================================================================
# Monitoring & Logging
# =============================================================================

# Sentry (Error Tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACE_SAMPLE_RATE=1.0

# Logging
LOG_LEVEL=debug

# =============================================================================
# Redis (Optional - for caching)
# =============================================================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=300

# =============================================================================
# Feature Flags
# =============================================================================

VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME=false
VITE_ENABLE_DEBUG=true

# =============================================================================
# Testing Configuration
# =============================================================================

TEST_DATABASE_URL=postgresql://test:test@localhost:5432/fabricspeaks_test
TEST_SKIP_AUTH=false
TEST_TIMEOUT=30000
